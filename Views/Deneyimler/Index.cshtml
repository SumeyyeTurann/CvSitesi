@model BlogCV.Models.Sınıf.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <table class="table table-dark">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Alt Başlık</th>
                <th>Tarih</th>
                <th>Detaylar</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Deger2)
            {
            <tr>
                <th>@x.ID</th>
                <td>@x.Title</td>
                <td>@x.Subtitle</td>
                <td>@x.Date</td>
                <td>@x.Details</td>
                <td><a href="/Deneyimler/DeneyimSil/@x.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Deneyimler/DeneyimGetir/@x.ID" class="btn btn-info">Güncelle</a></td>
            </tr>
            }
        </tbody>
    </table>

<a href="/Deneyimler/YeniDeneyim/" class="btn btn-success">Deneyim Ekle</a>