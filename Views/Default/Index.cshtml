@model BlogCV.Models.Entity.tblAbout


@*
    @using BlogCV.Models.Entity
    @model BlogCV.Models.Sınıf.Class1
*@

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Blog CV</title>
    <link rel="icon" type="image/x-icon" href="~/startbootstrap-resume-gh-pages/assets/img/favicon.ico" />

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    @*<link href="~/startbootstrap-resume-gh-pages/css/resume.min.css" rel="stylesheet" />*@

    <link href="~/web/css/styles2.css" rel="stylesheet" />
</head>

<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Blog CV</span>
            <span class="d-none d-lg-block">
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@Model.Image" alt="">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Deneyimlerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#education">Eğitim Hayatım</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Yeteneklerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#interests">Hobilerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#awards">Makaleler</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0">

        <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
           
                    <div class="w-100">
                        <h1 class="mb-0">
                            @Model.Name
                            <span class="text-primary">@Model.Surname</span>
                        </h1>
                        <div class="subheading mb-5">
                            @Model.Address · @Model.Phone ·
                            <a href="mailto:name@email.com">@Model.Maıl</a>
                        </div>
                        <p class="lead mb-5">@Model.About</p>
                        <div class="social-icons">
                            <a class="social-icon" href="#"><i class="fab fa-linkedin-in"></i></a><a class="social-icon" href="#"><i class="fab fa-github"></i></a><a class="social-icon" href="#"><i class="fab fa-twitter"></i></a><a class="social-icon" href="#"><i class="fab fa-facebook-f"></i></a>
                        </div>

                    </div>
                
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="experience">
            <div class="w-100">
                <h2 class="mb-5">Deneyimlerim</h2>
                @foreach (var x in Model.tblExperıence)
                {
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between">

                        <div class="resume-content">

                            <h3 class="mb-0">@x.Title</h3>
                            <div class="subheading mb-3">@x.Subtitle</div>
                            <p>@x.Details</p>
                        </div>
                        <div class="resume-date text-md-right">
                            <span class="text-primary">@x.Date</span>
                        </div>
                    </div>
                }
                </div>
            
        </section>




        <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="education">
            <div class="w-100">
                <h2 class="mb-5">Eğitim Hayatım</h2>
                @foreach (var x in Model.tblEducatıon)
                {
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between">
                        <div class="resume-content ">
                            <h3 class="mb-0">@x.Title</h3>
                            <div class="subheading mb-3">@x.Subtıtle</div>
                            <div>@x.Department</div>
                            <p>GNO: @x.GPA</p>
                        </div>
                    </div>
                }
            </div>
            
        </section>


        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
            
            <div class="w-100">
                <h2 class="mb-5">Yetenekler</h2>

                <div class="subheading mb-3">Programlama Dilleri &amp; Araçlar</div>

                <ul class="list-inline dev-icons">
                    <li class="list-inline-item"><i class="fab fa-html5"></i></li>
                    <li class="list-inline-item"><i class="fab fa-css3-alt"></i></li>
                    <li class="list-inline-item"><i class="fab fa-js-square"></i></li>
                    <li class="list-inline-item"><i class="fab fa-angular"></i></li>
                    <li class="list-inline-item"><i class="fab fa-react"></i></li>
                    <li class="list-inline-item"><i class="fab fa-node-js"></i></li>
                    <li class="list-inline-item"><i class="fab fa-sass"></i></li>
                    <li class="list-inline-item"><i class="fab fa-less"></i></li>
                    <li class="list-inline-item"><i class="fab fa-wordpress"></i></li>
                    <li class="list-inline-item"><i class="fab fa-gulp"></i></li>
                    <li class="list-inline-item"><i class="fab fa-grunt"></i></li>
                    <li class="list-inline-item"><i class="fab fa-apple"></i></li>

                </ul>

                <div class="subheading mb-3">İş Akışı</div>
                @foreach (var x in Model.tblSkılls)
                {
                    <ul class="fa-ul mb-0">
                        <li>
                            <i class="fa-li fa fa-check"></i>
                            @x.Skıll
                        </li>

                    </ul>
                }
                </div>
                
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
            <div class="w-100">
                <h2 class="mb-5">Hobilerim</h2>
                @foreach (var x in Model.tblInterests)
                {


                    <ul class="fa-ul mb-0">
                        <li>
                            <i class="fa-li fa fa-check"></i>
                            @x.Interest
                        </li>
                    </ul>
                }
                </div>
            
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="awards">
            <div class="w-100">
                <h2 class="mb-5">Makalelerim</h2>
                @foreach (var x in Model.tblArticles)
                {



                    <ul class="fa-ul mb-0">
                        <li>
                            <b>@x.Title</b>
                        </li>

                        <li>
                            <i class="fa-li fa fa-trophy text-warning"></i>
                            @x.Article
                        </li>
                    </ul>
                    <br />
                }
            </div>
            
            
            </section>
    </div>

    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <!-- Custom scripts for this template -->
    @*<script src="~/resume-bootstrap4-master/js/resume.min.js"></script>*@

    <script src="~/web/js/scripts.js"></script>


</body>

</html>

